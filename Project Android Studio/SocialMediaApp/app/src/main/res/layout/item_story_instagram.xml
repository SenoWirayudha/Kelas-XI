<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:gravity="center">

    <!-- Story Container -->
    <FrameLayout
        android:id="@+id/storyContainer"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center">

        <!-- Story Profile Image with Border -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="40dp"
            app:cardElevation="0dp"
            android:layout_margin="4dp">

            <!-- Background for Border -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- Story Border Ring -->
                <View
                    android:id="@+id/storyBorder"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/story_border_gradient" />

                <!-- Profile Image -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    app:cardCornerRadius="37dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:id="@+id/profileImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_launcher_foreground" />

                </androidx.cardview.widget.CardView>

            </FrameLayout>

        </androidx.cardview.widget.CardView>

        <!-- Add Story Icon (Only for own story) -->
        <androidx.cardview.widget.CardView
            android:id="@+id/addStoryIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="2dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/primary"
            android:visibility="gone">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_add"
                android:tint="@android:color/white" />

        </androidx.cardview.widget.CardView>

        <!-- Viewed Indicator (Gray overlay for viewed stories) -->
        <View
            android:id="@+id/viewedIndicator"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#80000000"
            android:layout_margin="4dp"
            android:visibility="gone" />

    </FrameLayout>

    <!-- Username -->
    <TextView
        android:id="@+id/userName"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Username"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        android:gravity="center"
        android:maxLines="1"
        android:ellipsize="end" />

</LinearLayout>
