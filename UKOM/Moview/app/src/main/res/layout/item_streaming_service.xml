<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="8dp">

    <!-- Logo Container with Badge -->
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingEnd="8dp"
        android:paddingBottom="8dp">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="64dp"
            android:layout_height="64dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#1A1F2E">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/iv_service_logo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:scaleType="fitCenter"
                android:contentDescription="Streaming Service"
                app:shapeAppearanceOverlay="@style/RoundedCorner8dp"
                tools:src="@tools:sample/avatars" />

        </com.google.android.material.card.MaterialCardView>

        <!-- Availability Type Badge -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/badge_availability"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="2dp"
            app:cardCornerRadius="6dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#1E88E5">

            <TextView
                android:id="@+id/tv_availability_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="6dp"
                android:paddingVertical="3dp"
                android:textColor="@color/white"
                android:textSize="8sp"
                android:textStyle="bold"
                android:letterSpacing="0.08"
                tools:text="RENT" />

        </com.google.android.material.card.MaterialCardView>

    </FrameLayout>

    <!-- Service Name -->
    <TextView
        android:id="@+id/tv_service_name"
        android:layout_width="72dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:textColor="@color/white"
        android:textSize="11sp"
        android:textStyle="bold"
        android:gravity="center"
        android:maxLines="1"
        android:ellipsize="end"
        tools:text="Netflix" />

    <!-- Release Date (for upcoming) -->
    <TextView
        android:id="@+id/tv_release_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:textColor="@color/text_secondary"
        android:textSize="9sp"
        android:gravity="center"
        android:visibility="gone"
        tools:text="Jan 15"
        tools:visibility="visible" />

</LinearLayout>
