<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_bottom_sheet"
    android:paddingBottom="32dp">

    <!-- Handle -->
    <View
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/bg_bottom_sheet_handle" />

    <!-- Title & Year -->
    <TextView
        android:id="@+id/tv_movie_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/text_primary"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="Interstellar" />

    <TextView
        android:id="@+id/tv_movie_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="4dp"
        android:textColor="@color/text_secondary"
        android:textSize="14sp"
        android:text="2014" />

    <!-- Action Buttons: Watched, Like, Watchlist -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="32dp">

        <LinearLayout
            android:id="@+id/btn_watched"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_watched"
                android:layout_width="56dp"
                android:layout_height="56dp"
                app:cardBackgroundColor="#1E2530"
                app:cardCornerRadius="28dp"
                app:cardElevation="0dp"
                app:strokeWidth="2dp"
                app:strokeColor="@color/text_secondary">

                <ImageView
                    android:id="@+id/iv_watched_icon"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_eye"
                    app:tint="@color/text_secondary" />

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/tv_watched_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Watch"
                android:textColor="@color/text_secondary"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_like"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="56dp"
                android:layout_height="56dp"
                app:cardBackgroundColor="#1E2530"
                app:cardCornerRadius="28dp"
                app:cardElevation="0dp">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_heart"
                    app:tint="@color/text_secondary" />

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Like"
                android:textColor="@color/text_primary"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_watchlist"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="56dp"
                android:layout_height="56dp"
                app:cardBackgroundColor="#1E2530"
                app:cardCornerRadius="28dp"
                app:cardElevation="0dp">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_bookmark"
                    app:tint="@color/text_secondary" />

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Watchlist"
                android:textColor="@color/text_primary"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="24dp"
        android:background="#2E3A47" />

    <!-- Rate This Film -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"
        android:text="RATE THIS FILM"
        android:textColor="@color/text_secondary"
        android:textSize="12sp"
        android:letterSpacing="0.1" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:id="@+id/star_1"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:padding="6dp"
            android:src="@drawable/ic_star_outline"
            android:scaleType="fitCenter" />

        <ImageView
            android:id="@+id/star_2"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:padding="6dp"
            android:src="@drawable/ic_star_outline"
            android:scaleType="fitCenter"
            android:layout_marginStart="4dp" />

        <ImageView
            android:id="@+id/star_3"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:padding="6dp"
            android:src="@drawable/ic_star_outline"
            android:scaleType="fitCenter"
            android:layout_marginStart="4dp" />

        <ImageView
            android:id="@+id/star_4"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:padding="6dp"
            android:src="@drawable/ic_star_outline"
            android:scaleType="fitCenter"
            android:layout_marginStart="4dp" />

        <ImageView
            android:id="@+id/star_5"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:padding="6dp"
            android:src="@drawable/ic_star_outline"
            android:scaleType="fitCenter"
            android:layout_marginStart="4dp" />

    </LinearLayout>

    <!-- Menu Items -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        android:paddingHorizontal="24dp">

        <!-- Review or log again -->
        <LinearLayout
            android:id="@+id/btn_review_log"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="16dp"
            android:background="?attr/selectableItemBackground">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_edit"
                app:tint="@color/text_secondary" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Review and log"
                android:textColor="@color/text_primary"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_arrow_right"
                app:tint="@color/text_secondary" />

        </LinearLayout>

        <!-- Go to film -->
        <LinearLayout
            android:id="@+id/btn_go_to_film"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="16dp"
            android:background="?attr/selectableItemBackground">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_film"
                app:tint="@color/text_secondary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Go to film"
                android:textColor="@color/text_primary"
                android:textSize="16sp" />

        </LinearLayout>

        <!-- View poster -->
        <LinearLayout
            android:id="@+id/btn_view_poster"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="16dp"
            android:background="?attr/selectableItemBackground">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_image"
                app:tint="@color/text_secondary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="View poster"
                android:textColor="@color/text_primary"
                android:textSize="16sp" />

        </LinearLayout>

        <!-- Change poster or backdrop -->
        <LinearLayout
            android:id="@+id/btn_change_poster"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="16dp"
            android:background="?attr/selectableItemBackground">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_image_edit"
                app:tint="@color/text_secondary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Change poster or backdrop"
                android:textColor="@color/text_primary"
                android:textSize="16sp" />

        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#2E3A47" />

        <!-- Share -->
        <LinearLayout
            android:id="@+id/btn_share_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="16dp"
            android:background="?attr/selectableItemBackground">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_share"
                app:tint="@color/text_secondary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Share"
                android:textColor="@color/text_primary"
                android:textSize="16sp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Close Button -->
    <Button
        android:id="@+id/btn_close"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="16dp"
        android:text="Close"
        android:textColor="@color/text_primary"
        android:textStyle="bold"
        android:backgroundTint="#2E3A47"
        android:paddingVertical="14dp"
        app:cornerRadius="8dp" />

</LinearLayout>
