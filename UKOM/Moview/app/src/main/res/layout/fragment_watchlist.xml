<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_background">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Back"
            android:src="@drawable/ic_back"
            app:tint="@color/text_primary" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="Watchlist"
            android:textColor="@color/text_primary"
            android:textSize="28sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Filter Chips -->
    <HorizontalScrollView
        android:id="@+id/scroll_chips"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:paddingBottom="16dp"
        android:scrollbars="none"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header">

        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:flexWrap="nowrap">

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_all_movies"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_marginEnd="8dp"
                android:text="All Movies"
                android:textColor="@color/chip_text_selector"
                android:textSize="13sp"
                app:checkedIconVisible="false"
                app:chipBackgroundColor="@color/chip_background_selector"
                app:chipCornerRadius="16dp"
                app:chipMinHeight="32dp"
                app:chipStartPadding="12dp"
                app:chipEndPadding="12dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_date_added"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_marginEnd="8dp"
                android:text="Date Added"
                android:textColor="@color/chip_text_selector"
                android:textSize="13sp"
                app:checkedIconVisible="false"
                app:chipBackgroundColor="@color/chip_background_selector"
                app:chipCornerRadius="16dp"
                app:chipMinHeight="32dp"
                app:chipStartPadding="12dp"
                app:chipEndPadding="12dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_unwatched"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="Unwatched"
                android:textColor="@color/chip_text_selector"
                android:textSize="13sp"
                app:checkedIconVisible="false"
                app:chipBackgroundColor="@color/chip_background_selector"
                app:chipCornerRadius="16dp"
                app:chipMinHeight="32dp"
                app:chipStartPadding="12dp"
                app:chipEndPadding="12dp" />
        </com.google.android.flexbox.FlexboxLayout>
    </HorizontalScrollView>

    <!-- Movies Grid -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_watchlist"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingHorizontal="4dp"
        android:paddingTop="4dp"
        android:paddingBottom="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/scroll_chips"
        tools:listitem="@layout/item_film_grid" />

</androidx.constraintlayout.widget.ConstraintLayout>
